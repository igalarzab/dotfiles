signingkey = TODO
helper = osxkeychain

[github]
user = TODO

[core]
editor = nvim
pager = delta

[delta]
line-numbers = true
navigate = true
hyperlinks = true
hyperlinks-file-link-format = "vscode://file/{path}:{line}"

[interactive]
diffFilter = delta --color-only

[alias]
co = checkout
st = status -s
ci = commit
br = branch

grep = grep -Ii
ignored = ls-files --others -i --exclude-standard
todo = grep -IE "TODO|FIXME|XXX"
find = !git ls-files | grep -i --color
aliases = !git config -l | grep alias | cut -c 7-

please = push --force-with-lease
commend = commit --amend --no-edit
cammend = commit --amend --no-edit --all

ls = !$DOTFILES/git/functions/git-ls
ll = !$DOTFILES/git/functions/git-ll
wtf = !$DOTFILES/git/functions/git-wtf

pr = !gh pr create
prd = !gh pr create --draft

[gpg]
format = ssh
program = gpg

[gpg "ssh"]
allowedSignersFile = ~/.config/git/allowed-signers

[pager]
difftool = true

[color]
ui = true
diff = auto
status = auto
branch = auto

[color "status"]
added = green
changed = yellow
untracked = red

[color "diff"]
whitespace = red reverse

[column]
ui = auto

[apply]
whitespace = nowarn

[branch]
