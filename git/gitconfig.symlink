# Sample gitconfig
[user]
    name         = Jose Ignacio Galarza
    email        = igalarzab@gmail.com
    signingkey   = 9B2489CA
    helper       = osxkeychain
[github]
    user         = igalarzab
[core]
    excludesfile = ~/.gitignore
    editor       = vim
[alias]
    co       = checkout
    st       = status -s
    ci       = commit
    br       = branch
    diff     = diff --word-diff
    grep     = greo -Ii
    find     = !git ls-files | grep -i --color

    aliases  = !git config -l | grep alias | cut -c 7-
    smodpull = submodule foreach git pull

    assume   = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed  = !git ls-files -v | grep ^h | cut -c 3-

    credit   = !$HOME/.dotfiles/git/functions/git-credit
    wtf      = !$HOME/.dotfiles/git/functions/git-wtf
    rank     = !$HOME/.dotfiles/git/functions/git-rank-contributers
    merged   = !$HOME/.dotfiles/git/functions/git-local-merged
    rbpull   = !$HOME/.dotfiles/git/functions/git-reup

    count    = shortlog -sn
    filelog  = log -u
    ls       = !$HOME/.dotfiles/git/functions/git-ls
    ll       = !$HOME/.dotfiles/git/functions/git-ll
[color]
    ui     = true
    diff   = auto
    status = auto
    branch = auto
[color "branch"]
    current = yellow reverse
    local   = yellow
    remote  = cyan
[color "status"]
    added     = green
    changed   = yellow
    untracked = red
[color "diff"]
    meta       = yellow bold
    frag       = magenta bold
    old        = red bold
    new        = green bold
    whitespace = red reverse
[mergetool]
    keepBackup = false
[difftool]
    prompt = false
[apply]
    whitespace = nowarn
[merge]
    tool = vimdiff
[mergetool]
    keepBackup = false
[branch]
    autosetuprebase = always
[help]
    autocorrect = 0
[hub]
    protocol = https
[push]
    default = simple
